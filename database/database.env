# Database Configuration Environment Variables

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=diffagent_db
POSTGRES_USER=diffagent_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_SSL_MODE=disable

# MySQL  
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=diffagent_db
MYSQL_USER=diffagent_user
MYSQL_PASSWORD=your_secure_password
MYSQL_CHARSET=utf8mb4

# MongoDB
MONGODB_URI=mongodb://diffagent_user:your_secure_password@localhost:27017/diffagent_db
MONGODB_OPTIONS={"useNewUrlParser":true,"useUnifiedTopology":true}

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Database Connection Pool Settings
DB_CONNECTION_TIMEOUT=60000
DB_ACQUIRE_TIMEOUT=60000
DB_IDLE_TIMEOUT=30000
DB_POOL_MIN_SIZE=2
DB_POOL_MAX_SIZE=20

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_MEMORY=100mb

# Migration Settings
DB_MIGRATION_AUTO_RUN=true
DB_MIGRATION_TABLE=migrations